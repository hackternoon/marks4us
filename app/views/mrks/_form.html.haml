= form_for @mrk do |f|
  -if @mrk.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mrk.errors.count, "error")} prohibited this mrk from being saved:"
      %ul
        - @mrk.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :uurl
    = f.text_field :uurl
  .field
    = f.label :usr_id
    = f.number_field :usr_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :tag1
    = f.text_field :tag1
  .field
    = f.label :tag2
    = f.text_field :tag2
  .field
    = f.label :tag3
    = f.text_field :tag3
  .field
    = f.label :note
    = f.text_area :note
  .actions
    = f.submit 'Save'
