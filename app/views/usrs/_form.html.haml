= form_for @usr do |f|
  -if @usr.errors.any?
    #error_explanation
      %h2= "#{pluralize(@usr.errors.count, "error")} prohibited this usr from being saved:"
      %ul
        - @usr.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :password_digest
    = f.text_field :password_digest
  .actions
    = f.submit 'Save'
