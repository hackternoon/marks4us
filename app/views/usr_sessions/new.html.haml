%legend
  %h1 Sign In
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %div
    E-Mail or Name
    %br/
    = f.text_field :email
  %div
    = f.label :password
    %br/
    = f.password_field :password
  - if devise_mapping.rememberable?
    %div
      = f.check_box :remember_me
      = f.label :remember_me
  %div= f.submit "Sign in"
%br/
= render 'shared/confirm_url'
%br/
